{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "gavflab/gutenberg-slider",
  "version": "0.1.0",
  "title": "Slider",
  "category": "widgets",
  "icon": "slides",
  "description": "Gutenberg Slider",
  "supports": {
    "html": false,
    "align": [
      "full",
      "wide"
    ],
    "interactivity": true
  },
  "textdomain": "gutenberg-slider",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php",
  "viewScript": "file:./view.js",
  "attributes": {
    "slides": {
      "type": "array",
      "default": []
    },
    "size": {
      "type": "string",
      "default": "vh"
    },
    "height": {
      "type": "string",
      "default": "50vh"
    },
    "speed": {
      "type": "number",
      "default": 2500
    },
    "autoplay": {
      "type": "boolean",
      "default": false
    },
    "autoplayDelay": {
      "type": "number",
      "default": 2500
    },
    "slidesPerView": {
      "type": "number",
      "default": 1
    },
    "navigation": {
      "type": "boolean",
      "default": false
    },
    "pagination": {
      "type": "boolean",
      "default": false
    }
  }
}